<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <p>
        <% if @post != nil and @post.errors.any? and @post.errors.to_h[:title].to_s != "" %>
            <div class="alert alert-danger"><%= "Title " + @post.errors.to_h[:title].to_s %></div>
        <% end %>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
        <% if @post != nil and @post.errors.any? and @post.errors.to_h[:body].to_s != "" %>
            <div class="alert alert-danger"><%= "Body " + @post.errors.to_h[:body].to_s %></div>
        <% end %>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>
