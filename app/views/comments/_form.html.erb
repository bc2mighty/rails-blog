<%= form_for([@post, @post.comments.build]) do |f| %>
    <h5>Write your comment below</h5>
    <p>
        <% if @post != nil and @post.errors.any? and @post.errors.to_h[:username].to_s != "" %>
            <div class="alert alert-danger"><%= "Title " + @post.errors.to_h[:username].to_s %></div>
        <% end %>
        <%= f.label :username %><br>
        <%= f.text_field(:username, {:class => 'form-control'}) %>
    </p>
    <p>
        <% if @post != nil and @post.errors.any? and @post.errors.to_h[:body].to_s != "" %>
            <div class="alert alert-danger"><%= "Body " + @post.errors.to_h[:body].to_s %></div>
        <% end %>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>